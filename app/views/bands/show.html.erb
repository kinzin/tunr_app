<h1>Band Page: <%= @band.name %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td>Musician</td>
      <td>Instrument</td>  
    </tr>
  </thead>
  <tbody>
  <% @band.musicians.each do |musician| %>
    <tr>
      <td>
        <a href="<%= musician_path(musician) %>">
          <%= musician.name %>
        </a>
      </td>
      <td>
        <%= BandMembership.where(musician_id: musician.id, band_id: @band.id).first.instrument %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>