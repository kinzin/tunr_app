<!DOCTYPE html>
<html>
<head>
  <title>TunrApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Quicksand:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="container">
    <a class="btn btn-default btn-lg" href="<%= bands_path %>">Home</a>
    <a class="btn btn-default btn-lg" href="<%= musicians_path %>">Musicians</a>
    <a class="btn btn-default btn-lg" href="<%= new_band_path %>">New Band</a>
    <a class="btn btn-default btn-lg" href="<%= new_musician_path %>">New Musician</a>
    <a class="btn btn-default btn-lg"href="<%= new_band_membership_path %>">New Bandmembership</a>
   
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  
    <% if user_signed_in? %>
      <p>Welcome <%= current_user.email %> </p>
      <%= link_to "Log Out", destroy_user_session_path, method: destroy %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path %>
      <%= link_to "Sign Up", new_user_registration_path %>
      
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
